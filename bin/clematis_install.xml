<installation version="1.0">
    <info>
        <appname>Clematis</appname>
        <appversion>1.0.3</appversion>
        <authors>
            <author name="Troshin Anton" email="tysinsh@comail.ru"/>
        </authors>
        <url>http://jworkspaceprj.sourceforge.net</url>
    </info>
    <native type="izpack" name="ShellLink.dll"/>
    <guiprefs height="445" resizable="no" width="620"/>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    <resources>
        <res src="../clematis.license" id="LicencePanel.licence"/>
        <res src="../logo/InstallerLogo.gif" id="Installer.image"/>
        <res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
    </resources>
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    <packs>
        <pack name="core" required="yes">
            <description>This is a set of system core and required libraries</description>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/clematis.bat"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/clematisw.bat"/>
            <file targetdir="$INSTALL_PATH" src="../config"/>
            <file targetdir="$INSTALL_PATH" src="../i18n"/>
            <file targetdir="$INSTALL_PATH" src="../lib"/>
            <file targetdir="$INSTALL_PATH\users\root" src="../users/root/installer"/>
            <file targetdir="$INSTALL_PATH\users\root" src="../users/root/network"/>
            <file targetdir="$INSTALL_PATH\users\root" src="../users/default/shells"/>
            <file targetdir="$INSTALL_PATH\users\root" src="../users/default/plugins"/>
            <file targetdir="$INSTALL_PATH\users\root" src="../users/root/profile.dat"/>
            <file targetdir="$INSTALL_PATH" src="../launcher.jar"/>
            <file targetdir="$INSTALL_PATH\plugins" src="../plugins/readme.txt"/>
            <file targetdir="$INSTALL_PATH" src="../logo"/>
            <file targetdir="$INSTALL_PATH" src="../clematis.license"/>
            <file targetdir="$INSTALL_PATH" src="../readme.txt"/>
        </pack>
        <pack name="group server A (jsdt based)" required="no">
            <description>The group server implementation, based on JSDT 2.0</description>
            <file targetdir="$INSTALL_PATH\plugins" src="../plugins/jwserver.jar"/>
        </pack>
        <pack name="group client A (jsdt based)" required="no">
            <description>The group client implementation, based on JSDT 2.0</description>
            <file targetdir="$INSTALL_PATH\users\root\plugins" src="../users/root/plugins/jwclient.jar"/>
        </pack>
        <pack name="network console A (jsdt based)" required="no">
            <description>The network console based on JSDT 2.0</description>
            <file targetdir="$INSTALL_PATH\users\root\shells" src="../users/root/shells/jconsole.jar"/>
        </pack>
        <pack name="installer ui shell" required="no">
            <description>User interface for Clematis installer</description>
            <file targetdir="$INSTALL_PATH\users\root\shells" src="../users/root/shells/instsh.jar"/>
        </pack>
        <pack name="runtime manager ui shell" required="no">
            <description>User interface for Clematis runtime manager</description>
            <file targetdir="$INSTALL_PATH\users\root\shells" src="../users/root/shells/rtsh.jar"/>
        </pack>
        <pack name="script ui shell" required="no">
            <description>User interface for Clematis script engine with source editor</description>
            <file targetdir="$INSTALL_PATH\users\root\shells" src="../users/root/shells/scriptsh.jar"/>
        </pack>
        <pack name="sources" required="no">
            <description>Clematis system core and some libraries</description>
            <file targetdir="$INSTALL_PATH\src" src="../src/clematis"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/dtdparser"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/instui"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/kiwi_patch"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/launcher"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/net"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/rtui"/>
            <file targetdir="$INSTALL_PATH\src" src="../src/sed"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/build.bat"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/clean.bat"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/build.properties"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/build.xml"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/build_installer.bat"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/clematis_install.xml"/>
            <file targetdir="$INSTALL_PATH\bin" src="../bin/shortcutSpec.xml"/>
        </pack>
    </packs>
</installation>
